{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bowl-of-ramen",
  "version": "0.1.0",
  "identifier": "com.bowl-of-ramen.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Meter",
        "fullscreen": false,
        "width": 500,
        "height": 350,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "minWidth": 400,
        "minHeight": 120,
        "alwaysOnTop": true,
        "visible": false
      },
      {
        "label": "logs",
        "title": "Logs",
        "url": "logs",
        "minWidth": 650,
        "minHeight": 300,
        "width": 800,
        "height": 500,
        "decorations": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
